<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_change_clarity" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/dialog_bg</item>
    </style>


    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#19B5FF</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <style name="edit_common">
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">#A5A5A5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>


    <declare-styleable name="DrawableTextView">
        <attr format="dimension" name="radius"/>
        <attr format="boolean" name="enableCenterDrawables"/>
        <attr format="boolean" name="enableTextInCenter"/>
        <attr format="dimension" name="drawableStartWidth"/>
        <attr format="dimension" name="drawableStartHeight"/>
        <attr format="dimension" name="drawableTopWidth"/>
        <attr format="dimension" name="drawableTopHeight"/>
        <attr format="dimension" name="drawableEndWidth"/>
        <attr format="dimension" name="drawableEndHeight"/>
        <attr format="dimension" name="drawableBottomWidth"/>
        <attr format="dimension" name="drawableBottomHeight"/>
    </declare-styleable>


    <declare-styleable name="LoadingButton">

        <attr name="enableShrink" format="boolean" />
        <attr name="enableRestore" format="boolean" />
        <attr name="disableClickOnLoading" format="boolean" />
        <attr name="shrinkDuration" format="integer" />
        <attr name="shrinkShape" format="enum">
            <enum name="Default" value="0" />
            <enum name="Oval" value="1" />
        </attr>

        <attr name="loadingEndDrawableSize" format="dimension" />
        <attr name="loadingDrawableColor" format="color" />
        <attr name="loadingDrawablePosition" format="enum">
            <enum name="Start" value="0" />
            <enum name="Top" value="1" />
            <enum name="End" value="2" />
            <enum name="Bottom" value="3" />
        </attr>

        <attr name="endSuccessDrawable" format="reference" />
        <attr name="endFailDrawable" format="reference" />
        <attr name="endDrawableAppearTime" format="integer" />
        <attr name="endDrawableDuration" format="integer" />

    </declare-styleable>
</resources>